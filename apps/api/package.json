{
  "name": "@inboxorcist/api",
  "version": "0.4.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "INBOXORCIST_ENV=development bun --env-file=.env.local run --hot src/index.ts",
    "build": "bun run scripts/build.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "db:generate": "bun --env-file=.env.local drizzle-kit generate",
    "db:migrate": "bun --env-file=.env.local drizzle-kit migrate",
    "db:push": "bun --env-file=.env.local drizzle-kit push",
    "db:studio": "bun --env-file=.env.local drizzle-kit studio",
    "db:reset": "rm -rf ./data && mkdir -p ./data && bun --env-file=.env.local drizzle-kit push"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.3.4",
    "better-sqlite3": "^12.5.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.49.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "drizzle-orm": "^0.45.1",
    "google-auth-library": "^10.5.0",
    "googleapis": "^168.0.0",
    "hono": "^4.10.8",
    "nanoid": "^5.1.6",
    "postgres": "^3.4.7"
  }
}
